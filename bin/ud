#!/usr/bin/env bash

ud() {
  if ! mountpoint -q /boot; then
    echo "ğŸ”„ /boot is not mounted. Attempting to mount..."
    if ! sudo mount /boot; then
      echo "âŒ Failed to mount /boot. Aborting update."
      return 1
    fi
  fi

  echo "âœ… /boot is mounted. Proceeding with update..."
  sudo pacman -Syyu --noconfirm
}
