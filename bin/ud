#!/usr/bin/env bash

if ! mountpoint -q /boot; then
	echo "⚠️  /boot is not mounted! Please mount it before updating."
	return 1
fi

if ! mountpoint -q /boot/efi; then
	echo "⚠️  /boot/efi is not mounted! Please mount it before updating."
	return 1
fi

echo "✅ All required mount points are OK. Proceeding with update..."
sudo pacman -Syu
